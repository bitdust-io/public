FROM vm/ubuntu:18.04

RUN apt-get update && \
    apt-get install apt-transport-https ca-certificates curl software-properties-common && \
    curl -fsSL https://download.docker.com/linux/ubuntu/gpg | apt-key add - && \
    add-apt-repository "deb [arch=amd64] https://download.docker.com/linux/ubuntu bionic stable" && \
    apt-get update && \
    apt install docker-ce make git python-dev python-pip python-virtualenv \

RUN curl -L "https://github.com/docker/compose/releases/download/1.27.4/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose && \
    chmod +x /usr/local/bin/docker-compose

COPY / /root

RUN make -C /root test_unit
RUN make -C /root regress_prepare
RUN make -C /root regress_run_parallel
RUN make -C /root regress_report 1>./regress_report.txt
RUN make -C /root regress_stop
RUN make -C /root regress_clean
RUN cat ./regress_report.txt

RUN BACKGROUND python3 -m http.server 80
EXPOSE WEBSITE http://localhost:80
